# {{ ansible_managed }} - {{ ansible_facts['date_time'].date }} {{ ansible_facts['date_time'].time }}
{
    email {{ caddy_acme_email }}
    {% if caddy_dyndns_enabled %}
    dynamic_dns {
        provider cloudflare {env.CF_API_TOKEN}
        versions ipv4 ipv6
        domains {
            {% for key, val in caddy_dyndns_domains.items() %}
            {{ key }} {{ val }}
            {% endfor %}
        }
    }
    {% endif %}
}

{% for key, val in caddy_hosts.items() %}
{{ key }} {
    {{ val | indent(4) }}
    tls {
        dns cloudflare {env.CF_API_TOKEN}
    }
}
{% endfor %}
